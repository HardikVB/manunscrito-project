    "version": "0.2.0",
    "configurations": [
        {
            "type": "ts",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\utils\\auth.ts",
            "preLaunchTask": "ts-node-dev --respawn --transpile-only index.ts",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}